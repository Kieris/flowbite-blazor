@inherits BaseTypography

<span @ref="@ElementRef" class="@(Italic ? "italic" : "") @(LineThrough ? "line-through" : "") @(Underline ? $"underline {DecorationClass}" : "") 
@(Uppercase ? "uppercase" : "") @(Gradient ? GradientClass : Highlight ? HighlightClass : "text-gray-900 dark:text-white") 
@(DecorationClass) @Class" @attributes="@UserAttributes">
    @ChildContent
</span>

@code {
    /// <summary>
    /// Defines whether the text is italicized. Default is false.
    /// </summary>
    [Parameter]
    public bool Italic { get; set; }
    
    /// <summary>
    /// Defines whether the text has a line through it. Default is false.
    /// </summary>
    [Parameter]
    public bool LineThrough { get; set; }
    
    /// <summary>
    /// Defines whether the text is underlined. Default is false.
    /// The decoration class can be overwritten with <see cref="DecorationClass"/>
    /// </summary>
    [Parameter]
    public bool Underline { get; set; }
    
    /// <summary>
    /// Defines whether the text is uppercase. Default is false.
    /// </summary>
    [Parameter]
    public bool Uppercase { get; set; }
    
    /// <summary>
    /// Defines whether the text is gradient color. Default is false.
    /// Can overwrite the class for this with <see cref="GradientClass"/>
    /// </summary>
    [Parameter]
    public bool Gradient { get; set; }
    
    /// <summary>
    /// Defines whether the text is highlighted. Default is false.
    /// Can overwrite the class for this with <see cref="HighlightClass"/>
    /// </summary>
    [Parameter]
    public bool Highlight { get; set; }
    
    /// <summary>
    /// Defines the class for when text is highlighted. Default is (text-primary-600 dark:text-primary-500).
    /// </summary>
    [Parameter]
    public string HighlightClass { get; set; } = "text-primary-600 dark:text-primary-500";
    
    /// <summary>
    /// Defines the class for when text is gradient. Default is (text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400).
    /// </summary>
    [Parameter]
    public string GradientClass { get; set; } = "text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400";
    
    /// <summary>
    /// Defines the class for when text is underlined. Default is (decoration-2 decoration-primary-400 dark:decoration-primary-600).
    /// </summary>
    [Parameter]
    public string DecorationClass { get; set; } = "decoration-2 decoration-primary-400 dark:decoration-primary-600";
    
}