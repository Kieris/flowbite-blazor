@inherits Frame

<ul class="space-y-2 @(Border ? "pt-4 mt-4 border-t border-gray-200 dark:border-gray-700" : "") @Class" style="@Style">
    @ChildContent
</ul>

@code {
    /// <summary>
    /// The content of the SidebarGroup
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Defines whether the SidebarGroup has a border
    /// </summary>
    [Parameter]
    public bool Border { get; set; }

    /// <summary>
    /// Looks for parameter changes and sets <see cref="Border"/> to true if border attribute is present
    /// </summary>
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        if (Attributes.ContainsKey("border") && Attributes["border"].ToString() != "false")
        {
            Border = true;
        }
    }

}